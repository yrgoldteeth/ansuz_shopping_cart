.checkout_step_3
  - form_for :address, @address, :url => { } do |f|
    = form_field("address 1:<span class='required'>*</span>", f.text_field(:line1))
    = form_field("address 2:", f.text_field(:line2))
    = form_field("city:<span class='required'>*</span>",  f.text_field(:city))
    = form_field("state / province:<span class='required'>*</span>", f.text_field(:state_province))
    = form_field("zip / postal code:<span class='required'>*</span>",   f.text_field(:zip_postal))
    = form_field("country:<span class='required'>*</span>",    f.text_field(:country))
    = form_field("Use this address for shipping?", check_box_tag("use_for_shipping"))
    = hidden_field_tag(:step, 4)
    = image_submit_tag famfamfam_icon_path('basket_go')
